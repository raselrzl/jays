{
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["tailwindcss"],
  "rules": {
    "tailwindcss/no-custom-classname": "off", // Disable warnings for custom class names
    "no-console": "warn", // Warn about console statements
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Warn about unused vars, ignoring those starting with "_"
    "react/react-in-jsx-scope": "off", // No need to import React in scope with Next.js
    "react/prop-types": "off", // Disable prop-types checking for React
    "tailwindcss/classnames-order": "off", // Disable classnames order rule
    "tailwindcss/enforces-shorthand": "off" // Disable enforcing shorthand
  }
}
